<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_marginTop="20px"
  android:layout_marginBottom="20px"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
	  <TextView android:id="@+id/nodePad" 
	    android:layout_marginLeft="10dip"
	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content">
	  </TextView>
	  <ImageView android:id="@+id/nodeImg"
	    android:layout_width="16px"
	    android:layout_height="16px"
	    android:layout_marginRight="10dip"
	    android:layout_toRightOf="@id/nodePad"
	    android:layout_alignTop="@id/nodePad"
	   />
	   <TextView android:id="@+id/nodeText" 
	  	android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:layout_toRightOf="@id/nodeImg"
	    android:layout_alignBottom="@id/nodeImg"
	    android:layout_gravity="center_vertical" 
	    >
	  </TextView>
  </RelativeLayout>
